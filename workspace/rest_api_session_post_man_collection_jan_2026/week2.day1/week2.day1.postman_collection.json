              "pm.test(\"Status code is 201\", function () {\r",
              "    pm.response.to.have.status(201);\r",
              "});\r",
              "\r",
              "pm.test(\"Status code name has Created\", function () {\r",
              "    pm.response.to.have.status(\"Created\");\r",
              "});\r",
              "\r",
              "pm.test(\"Validate response should be in JSON format\", function () {    \r",
              "    pm.expect(pm.response.headers.get(\"Content-Type\")).contains('application/json');\r",
              "});\r",
              "\r",
              "pm.test(\"Response time is less than 2500ms\", function () {\r",
              "    pm.expect(pm.response.responseTime).to.be.below(2500);\r",
              "});\r",
              "\r",
